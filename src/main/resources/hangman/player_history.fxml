      </TableView>
      <Button fx:id="back_button" layoutX="21.0" layoutY="17.0" mnemonicParsing="false" prefHeight="80.0" prefWidth="80.0" styleClass="back-button" stylesheets="@player_history.css" text="Back" />
   </children>
